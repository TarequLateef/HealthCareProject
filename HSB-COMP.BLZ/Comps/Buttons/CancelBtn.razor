
<button type="button" class="btn hsb-exit" @onclick="@EvCancel" title="الغاء"
        style="@(!mouseOver?"background-color: #1b2f4c;color: #F4DEB3;box-shadow: rgb(112 93 116 / 44%) 0px 2px 4px 0px, rgb(68 86 94 / 55%) 0px 2px 16px 0px;"
        :"background-color: #F4DEB3;color: #1b2f4c;")" @onmouseover=@(()=>mouseOver=true)
        @onmouseout=@(()=>mouseOver=false) @attributes=@ModalAttr>
    <span class="fas fa-sign-out-alt"></span>
</button>

@code {
    bool mouseOver { get; set; } = false;
    [Parameter] public EventCallback EvCancel { get; set; }
    [Parameter] public Dictionary<string, object>? ModalAttr { get; set; }
}
